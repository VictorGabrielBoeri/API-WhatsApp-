<!DOCTYPE html>
<html>
  <head>
    <title>Login - Painel WhatsApp</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet" />
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h3 class="text-center">Login</h3>
            </div>
            <div class="card-body">
              <% if (locals.error) { %>
              <div class="alert alert-danger"><%= error %></div>
              <% } %>
              <form method="POST" action="/login">
                <div class="mb-3">
                  <label>Usu√°rio:</label>
                  <input
                    type="text"
                    name="username"
                    class="form-control"
                    required />
                </div>
                <div class="mb-3">
                  <label>Senha:</label>
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    required />
                </div>
                <button type="submit" class="btn btn-primary w-100">
                  Entrar
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
